<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.eseo.dis.camille.pfeandroid.EvaluationActivity"
                android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/project_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:minLines="2"
                android:padding="2dp"
                android:text="Monty Python And The Quest For The Holy Grail"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="36sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/text_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:text="Note : "
                    android:textAlignment="textStart"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/note_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:padding="2dp"
                    android:text=""
                    android:textAlignment="textEnd"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_global_note"

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text=">"
                    android:background="@color/blue"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:onClick="buttonClicked"/>


            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/cardListNotes"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/button_notes_validation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Valider"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</RelativeLayout>
